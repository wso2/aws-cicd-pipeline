{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "product": "",
    "version": "",
    "name": "BASE",
    "region": "",
    "buildtime": "{{ isotime \"2006-01-02-1504\" }}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "profile": "{{user `iamRole`}}",
      "region":"{{user `region`}}",
      "associate_public_ip_address": true,
      "instance_type": "m4.xlarge",
      "ssh_username": "ubuntu",
      "ami_name": "WSO2-CICD-UBUNTU-IMAGE-{{timestamp}}",
      "ami_groups": "all",
      "ami_description": "WSO2-AWS-CI/CD-Pipeline AMI",
      "source_ami_filter": {
        "filters": {
          "name": "wso2-elk-1567419998",
          "virtualization-type": "hvm",
          "root-device-type": "ebs"
        },
        "owners": ["700650335418"],
        "most_recent": true
      },
      "tags": {
      },
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/xvda",
          "volume_size": 10,
          "delete_on_termination": true
        }
      ],
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/xvda",
          "volume_size": 10,
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{user `image_resources`}}",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "execute_command": "sudo su - -c '{{ .Vars }} {{ .Path }}'",
      "inline" : [
      "bash /tmp/config.sh \"{{ user `product` }}\" \"{{ user `version` }}\" \"{{ user `deploymentPattern` }}\" \"{{ user `dbType` }}\""
      ]
    }
  ],
   "post-processors": [
   {
     "type": "manifest",
     "output": "{{user `manifest`}}",
     "strip_path": true
   }
 ]
}
